<section id="intro" class="intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 top-div">
              <img src="<%= asset_path 'dm.png' %>" alt="Responsive Image" class="img-responsive img-divij img-circle center-block">
            </div>
            <div class="col-lg-12">
                <div class="intro-text text-center">
                <span class="name">I'm Divij.</span>
                </div>
            </div>
            <div class="col-lg-12">
                  <hr class="star-light">
            </div>
            <div class="col-lg-12">
              <div class="mini-intro-text text-center">
                <span class="quotes skills">Web Developer</span>
                <span class="quotes skills">Growth Hacker</span>
                <span class="quotes skills">Digital Marketer</span>
                <span class="quotes skills">UX/UI Designer</span>
              </div>
            </div>
            <div class="col-lg-12">

              <a class="contentDiv block-center" href="#about">
                <img class="arrow" src="https://cdn3.iconfinder.com/data/icons/google-material-design-icons/48/ic_keyboard_arrow_down_48px-128.png">  
              </a>

              </div>
            </div>
        </div>
      </div>

</section>

<script>

  (function() {

      var quotes = $(".quotes");
      var quoteIndex = -1;

      function showNextQuote() {
          ++quoteIndex;
          quotes.eq(quoteIndex % quotes.length)
              .fadeIn(1000)
              .delay(1000)
              .fadeOut(1000, showNextQuote);
      }

      showNextQuote();

  })();

</script>
